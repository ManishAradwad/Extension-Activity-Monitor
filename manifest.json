{
    "manifest_version" : 2,
    "name" : "Extension Activity Monitor",
    "version" : "1.0",
    "description" : "Adds a browser action icon to toolbar. Click the button to see extensions active on current tab. Click 'Details' to see activity details of all installed extensions.",
    "homepage_url" : "https://github.com/ManishAradwad/Extension_Activity_Monitor/tree/master",
    "icons" : {
        "48" : "icons/eam-48.png",
        "32" : "icons/eam-32.png"
    },
    "permissions" : [
        "storage",
        "unlimitedStorage",
        "downloads",
        "management",
        "tabs",
        "webNavigation",
        "sessions"
    ],
    "browser_action" : {
        "browser_style": true,
        "default_icon" : {
            "32": "icons/eam-32.png", 
            "48": "icons/eam-48.png"
        },
        "default_title" : "Extension Activity Monitor",
        "default_popup" : "popup/popup.html"
    }, 
    "background" : {
        "scripts": ["background.js"]
    }
}